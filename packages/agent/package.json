{
  "name": "@sonde/agent",
  "version": "0.2.12",
  "description": "Lightweight infrastructure agent for the Sonde MCP diagnostic platform",
  "private": false,
  "license": "Apache-2.0",
  "author": "Sonde Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/physikal/sonde.git",
    "directory": "packages/agent"
  },
  "homepage": "https://github.com/physikal/sonde#readme",
  "bugs": {
    "url": "https://github.com/physikal/sonde/issues"
  },
  "keywords": ["mcp", "infrastructure", "diagnostics", "agent", "monitoring"],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sonde": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./runtime/connection": {
      "types": "./dist/runtime/connection.d.ts",
      "default": "./dist/runtime/connection.js"
    },
    "./runtime/executor": {
      "types": "./dist/runtime/executor.d.ts",
      "default": "./dist/runtime/executor.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sonde/shared": "*",
    "@sonde/packs": "*",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/ws": "^8.5.13",
    "vitest": "^2.1.8"
  }
}
